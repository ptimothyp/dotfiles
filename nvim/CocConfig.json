{
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "haskell",
    "json"
  ],
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],

  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "typescript",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "json",
    "cs",
    "html"
  ]
}
